@model Comment

<div class="col-sm-1">
    </div>

<div class="col-sm-11">
    <hr class="divider" />
    <div class="media">

        <div class="media-body">
            <p>
                @Model.Body
            </p>
            <ul class="list-inline list-unstyled">
                <li><span><i class="glyphicon glyphicon-calendar"></i> @Model.CreatedAt</span></li>
                <li>
                    <span class="glyphicon glyphicon-thumbs-up">@Model.Likes</span>
                </li>
            </ul>
            <hr class="divider" />
        </div>
    </div>
</div>
